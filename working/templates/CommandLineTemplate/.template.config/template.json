{
    "$schema": "http://json.schemastore.org/template",
    "author": "nloum",
    "classifications": [
        "CommandLine",
        "Console"
    ],
    "identity": "CommandLineTemplate",
    "name": "CommandLine",
    "shortName": "cli",
    "sourceName": "CommandLineTemplate",
    "preferNameDirectory": true,
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "primaryOutputs": [
        {
            "path": "CommandLineTemplate.csproj"
        }
    ],
    "specialCustomOperations": {
        "**/*.json": {
            "operations": [
                {
                    "configuration": {
                        "actionableElse": [
                            "//#else"
                        ],
                        "actionableElseif": [
                            "//#elif"
                        ],
                        "actionableIf": [
                            "//#if"
                        ],
                        "actions": [
                            "pseudoComment"
                        ],
                        "endif": [
                            "//#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    },
                    "type": "conditional"
                },
                {
                    "configuration": {
                        "id": "pseudoComment",
                        "original": "///",
                        "replacement": ""
                    },
                    "type": "replacement"
                }
            ]
        }
    },
    "symbols": {
        "CommandLineVerbs": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "noverbs",
            "longName": "logging",
            "shortName": "l",
            "choices": [
                {
                    "choice": "noverbs",
                    "description": "Single command"
                },
                {
                    "choice": "verbs",
                    "description": "Multiple command line verbs"
                }
            ]
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        },
        "LoggingFramework": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "microsoft",
            "choices": [
                {
                    "choice": "serilog",
                    "description": "Serilog"
                },
                {
                    "choice": "microsoft",
                    "description": "Default (Microsoft)"
                }
            ]
        },
        "EnableSerilog": {
            "type": "computed",
            "value": "(LoggingFramework == \"serilog\")"
        },
        "EnableMicrosoftLogging": {
            "type": "computed",
            "value": "(LoggingFramework == \"microsoft\")"
        },
        "EnableCommandLineVerbs": {
            "type": "computed",
            "value": "(CommandLineVerbs == \"verbs\")"
        },
        "EnableSingleCommand": {
            "type": "computed",
            "value": "(CommandLineVerbs == \"noverbs\")"
        }
    },
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        },
        {
            "description": "Add project to solution",
            "manualInstructions": [],
            "primaryOutputIndexes": "0",
            "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
            "continueOnError": true
        }
    ]
}