{
    "$schema": "http://json.schemastore.org/template",
    "author": "nloum",
    "classifications": [
        "CommandLine",
        "Console"
    ],
    "identity": "CommandLineTemplate",
    "name": "Command Line Application",
    "shortName": "cli",
    "sourceName": "CommandLineTemplate",
    "preferNameDirectory": true,
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "primaryOutputs": [
        {
            "path": "CommandLineTemplate.csproj"
        }
    ],
    "specialCustomOperations": {
        "**/*.json": {
            "operations": [
                {
                    "configuration": {
                        "actionableElse": [
                            "//#else"
                        ],
                        "actionableElseif": [
                            "//#elif"
                        ],
                        "actionableIf": [
                            "//#if"
                        ],
                        "actions": [
                            "pseudoComment"
                        ],
                        "endif": [
                            "//#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    },
                    "type": "conditional"
                },
                {
                    "configuration": {
                        "id": "pseudoComment",
                        "original": "///",
                        "replacement": ""
                    },
                    "type": "replacement"
                }
            ]
        },
        "*.json": {
            "operations": [
                {
                    "configuration": {
                        "actionableElse": [
                            "//#else"
                        ],
                        "actionableElseif": [
                            "//#elif"
                        ],
                        "actionableIf": [
                            "//#if"
                        ],
                        "actions": [
                            "pseudoComment"
                        ],
                        "endif": [
                            "//#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    },
                    "type": "conditional"
                },
                {
                    "configuration": {
                        "id": "pseudoComment",
                        "original": "///",
                        "replacement": ""
                    },
                    "type": "replacement"
                }
            ]
        }
    },
    "symbols": {
        "commandLineMode": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "noverbs",
            "choices": [
                {
                    "choice": "command",
                    "description": "Single command"
                },
                {
                    "choice": "verbs",
                    "description": "Multiple command line verbs"
                }
            ]
        },
        "enableVerbs": {
            "type": "computed",
            "value": "(commandLineMode == \"verbs\")"
        },
        "enableCommand": {
            "type": "computed",
            "value": "(commandLineMode == \"command\")"
        },

        "inlineHandlers": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },

        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        },

        "runtimeIdentifier": {
            "type": "parameter",
            "datatype": "text",
            "defaultValue": "",
            "replaces": "win-x64"
        },
        "enableRuntimeIdentifier": {
            "type": "computed",
            "value": "(runtimeIdentifier != \"\")"
        },

        "enablePublishSingleFile": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "enablePublishTrimmed": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },

        "simpleCommand": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "Simple",
            "fileRename": "Simple"
        },
        "simpleCommandLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "simpleCommand",
                "toLower": true
            },
            "replaces": "simple"
        },

        "verb1Name": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "Verb2",
            "fileRename": "Verb2"
        },
        "verb1NameLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "verb1Name",
                "toLower": true
            },
            "replaces": "verb1"
        },

        "verb2Name": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "Verb2",
            "fileRename": "Verb2"
        },
        "verb2NameLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "verb2Name",
                "toLower": true
            },
            "replaces": "verb2"
        },

        "targetFramework": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "net6.0",
            "replaces": "net6.0",
            "allowMultipleValues": true,
            "choices": [
                {
                    "choice": "net6.0",
                    "description": "net6.0"
                },
                {
                    "choice": "net5.0",
                    "description": "net5.0"
                },
                {
                    "choice": "netcoreapp3.0",
                    "description": "netcoreapp3.0"
                },
                {
                    "choice": "net3.1",
                    "description": "net3.1"
                }
            ]
        },

        "loggingFramework": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "microsoft",
            "choices": [
                {
                    "choice": "serilog",
                    "description": "Serilog"
                },
                {
                    "choice": "microsoft",
                    "description": "Microsoft"
                }
            ]
        },
        "enableSerilog": {
            "type": "computed",
            "value": "(loggingFramework == \"serilog\")"
        },
        "enableMicrosoftLogging": {
            "type": "computed",
            "value": "(loggingFramework == \"microsoft\")"
        },

        "dotNetToolName": {
            "type": "parameter",
            "datatype": "text",
            "defaultValue": "",
            "replaces": "botsay"
        },
        "enableDotNetTool": {
            "type": "computed",
            "value": "(dotNetToolName != \"\")"
        },

        "enableImplicitUsings": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true"
        }
    },
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        },
        {
            "description": "Add project to solution",
            "manualInstructions": [],
            "primaryOutputIndexes": "0",
            "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
            "continueOnError": true
        }
    ],
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!enableCommand || inlineHandlers)",
                    "exclude": [
                        "SimpleHandler.cs"
                    ]
                },
                {
                    "condition": "(!enableVerbs || inlineHandlers)",
                    "exclude": [
                        "Verb1Handler.cs",
                        "Verb2Handler.cs"
                    ]
                },
                {
                    "condition": "(!enableCommand)",
                    "exclude": [
                        "SimpleOptions.cs"
                    ]
                },
                {
                    "condition": "(!enableVerbs)",
                    "exclude": [
                        "Verb1Verb.cs",
                        "Verb2Verb.cs"
                    ]
                },
                {
                    "condition": "(!enableVerbs || !inlineHandlers)",
                    "exclude": [
                        "VerbBase.cs"
                    ]
                }
            ]
        }
    ]
}